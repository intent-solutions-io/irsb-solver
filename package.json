{
  "name": "@intent-solutions-io/irsb-solver",
  "version": "0.3.0",
  "description": "Reference solver/executor service for IRSB protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "irsb-solver": "./dist/cli.js"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:server": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "node dist/main.js",
    "cli": "tsx src/cli.ts",
    "demo": "./scripts/demo.sh",
    "replay": "./scripts/replay.sh",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "irsb",
    "solver",
    "intent",
    "protocol"
  ],
  "author": "Intent Solutions IO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/intent-solutions-io/irsb-solver.git"
  },
  "bugs": {
    "url": "https://github.com/intent-solutions-io/irsb-solver/issues"
  },
  "homepage": "https://github.com/intent-solutions-io/irsb-solver#readme",
  "dependencies": {
    "@google-cloud/kms": "^5.3.0",
    "commander": "^12.1.0",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "pino": "^9.14.0",
    "pino-pretty": "^11.0.0",
    "prom-client": "^15.1.3",
    "proper-lockfile": "^4.1.2",
    "viem": "^2.45.2",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^20.11.0",
    "@types/proper-lockfile": "^4.1.4",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  }
}
