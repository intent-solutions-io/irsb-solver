{
  "name": "@intent-solutions-io/irsb-solver",
  "version": "0.1.0",
  "description": "Reference solver/executor service for IRSB protocol",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "irsb",
    "solver",
    "intent",
    "protocol"
  ],
  "author": "Intent Solutions IO",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/intent-solutions-io/irsb-solver.git"
  },
  "bugs": {
    "url": "https://github.com/intent-solutions-io/irsb-solver/issues"
  },
  "homepage": "https://github.com/intent-solutions-io/irsb-solver#readme",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  }
}
